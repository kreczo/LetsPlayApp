<Window x:Class="LetsPlayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LetsPlayApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" OpacityMask="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}">
        <Label x:Name="label" Content="LetsPlayApp" HorizontalAlignment="Left" Height="70" Margin="150,40,0,0" VerticalAlignment="Top" Width="230" FontSize="40" />
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="213,140,0,0" VerticalAlignment="Top" Width="100" Click="button_Click"/>
        <Button x:Name="RegisterButton" Content="Register" HorizontalAlignment="Left" Margin="213,180,0,0" VerticalAlignment="Top" Width="100" Click="RegisterButton_Click"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="button_Click_1"/>

    </Grid>
</Window>
