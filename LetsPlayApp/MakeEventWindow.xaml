<Window x:Class="LetsPlayApp.MakeEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LetsPlayApp"
        mc:Ignorable="d"
        Title="MakeEventWindow" Height="350" Width="525">
    <Grid Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="35" Margin="228,40,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="palace" Content="Address" HorizontalAlignment="Left" Margin="97,49,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>
        <Label x:Name="discipline" Content="Discipline" HorizontalAlignment="Left" Margin="97,80,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>
        <Label x:Name="AvaiableSlots" Content="Avaiable Slots" HorizontalAlignment="Left" Margin="97,111,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>
        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="35" Margin="228,111,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Window>
